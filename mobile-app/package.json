{
  "name": "zebra-iota-edge-sdk",
  "version": "0.1.0",
  "scripts": {
    "build": "rollup -c",
    "autobuild": "rollup -c -w",
    "local": "run-p start:dev autobuild",
    "start": "sirv public --single",
    "start:dev": "sirv public --single --dev",
    "serve:capacitor": "sirv public --single --dev --host --port 5001",
    "build": "run-p build cap-run:android",
    "cap-run:android": "cap sync android && cap open android",
    "dev:android": "run-p serve:capacitor autobuild cap-run:android"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@rollup/plugin-wasm": "^5.1.2",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.2.0",
    "rollup": "^2.46.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.38.0",
    "svelte-preprocess": "^4.7.2"
  },
  "dependencies": {
    "@capacitor/android": "^2.4.7",
    "@capacitor/cli": "^2.4.7",
    "@capacitor/core": "^2.4.7",
    "capacitor-secure-storage-plugin": "^0.5.0",
    "rollup-plugin-copy": "^3.4.0",
    "sirv-cli": "^1.0.11",
    "uuid": "^8.3.2"
  }
}
